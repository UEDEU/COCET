{

  "manifest_version": 2,
  "name": "COCET",
  "version": "2.1.0",
 
  "description": "成美堂リンガポルタ レッドゲートでの補助ツールです。",
  
  "icons": { "16": "icon/16.png",
             "32": "icon/32.png",
             "48": "icon/48.png",
             "128": "icon/128.png" },
  "homepage_url": "https://github.com/kao-carrot/COCET",

  "content_scripts": [
    {
      "matches": ["*://w5.linguaporta.jp/*"],
      "js": ["selectScript.js"],
	  "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": ["embeddedNextSetScript.js"],

  "permissions": ["*://w5.linguaporta.jp/*"],
  
  "browser_action": {
    "default_icon": "icon/32.png",
    "default_title": "COCET",
    "default_popup": "pages/popup.html"
  }

}